@{
    // Retrieve the value from TempData
    string welcomeMessage = TempData["WelcomeMessage"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KrishnaPGCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">

    <!-- Your other head elements here -->
</head>
<body>
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <nav class="navbar navbar-default navbar-trans navbar-expand-lg fixed-top">
            <div class="container">
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarDefault" aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <a class="navbar-brand text-brand" asp-controller="Home" asp-action="Index">Krishna<span class="color-b">PG Care</span></a>

                <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Log Out</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item " asp-controller="User" asp-action="ManageProfile">manage profile</a>
                            </div>
                        </li>
                    </ul>
                </div>

                <button type="button" class="btn btn-b-n navbar-toggle-box navbar-toggle-box-collapse" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01">
                    <i class="bi bi-search"></i>
                </button>

            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:200px">
        <table>
            <tr>
                <td>
                    <button onclick="navigateToUserIndex()">
                        <img src="/assets/img/manageProeprty.png" alt="Manage Property" width="61px" />
                        <label>Manage Property</label>
                    </button>
                </td>
                <td>
                    <button>
                        <img src="/assets/img/telent-icon.png" alt="Tenant Users" width="82px" />
                        <label>Tenant Users</label>
                    </button>
                </td>
                <td>
                    <button>
                        <img src="/assets/img/manageUser.jpg" alt="Manage Users" width="91px" />
                        <label>Users Management</label>
                    </button>
                </td>
            </tr>
        </table>
    </div>
    @*<div >
            <button>
                <img src="/assets/img/registerProperty.jpg" />
            </button>
            <label>Add Property</label>
        </div>*@

    <script>
        var welcomeMessage = @Json.Serialize(welcomeMessage);
        if (welcomeMessage !== null) {
            alert(welcomeMessage);
        }
    </script>
    <script>
        function navigateToUserIndex() {
            window.location.href = '/User/manageProperty'; // Adjust the URL as needed
        }
    </script>

    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        td {
            text-align: center;
            padding: 20px;
        }

        button {
            border: none;
            background: none;
            cursor: pointer;
        }

        img {
            width: 80px; /* Set the desired width for the images */
            height: 80px; /* Set the desired height for the images */
            border-radius: 50%; /* Make the images circular if desired */
        }

        label {
            display: block;
            margin-top: 10px;
            font-size: 14px;
        }
    </style>


</body>
</html>
